@model BankAccounts.Models.AccountViewModel
<!-- @using BankAccounts.Models; -->
@{
    ViewData["title"] = "Add Account";
}

<div id="new-account">
    <form asp-controller="Accounts" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="AccountType"></label>
            <select asp-for="AccountType" asp-items="Html.GetEnumSelectList<AccountTypes>()">
                <option selected="selected"></option>
            </select>
            <span asp-validation-for="AccountType"></span>
        </div>
        <div class="form-group">
            <label asp-for="Balance"></label>
            <input asp-for="Balance" />
            <span asp-validation-for="Balance"></span>
        </div>
        <input type="submit" value="Setup Account" />
        <a href="/">Go Back</a>
    </form>
</div>